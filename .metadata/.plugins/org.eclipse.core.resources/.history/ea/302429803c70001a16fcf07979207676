package com.pfe.main.serviceImpl;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.main.entities.Employe;
import com.example.main.model.JwtAuthenticationToken;
import com.example.main.repositories.EmployeRepository;
import com.example.main.repositories.JwtAuthenticationTokenRepository;
import com.example.main.security.JwtGenerator;
import com.example.main.service.EmployeService;
import com.example.main.service.JwtAuthenticationTokenService;
@Service
public class EmployeServiceImpl implements EmployeService {

	@Autowired
	private EmployeRepository employeRepository;
	
	@Autowired
	private JwtAuthenticationTokenRepository jwtAuthenticationTokenRepository;
	@Autowired
	private JwtGenerator jwtGenerator;
	@Override
	public List<Employe> getEmploye() {
		return employeRepository.findAll();
	}
	@Override
	public String addEmploye(Employe emp) {
		
		String token=jwtGenerator.generate(emp);
		JwtAuthenticationToken jwtAuthenticationToken=new JwtAuthenticationToken(emp.getId(),token);
		emp.setJwtAuthenticationToken(jwtAuthenticationToken);
		
		if(verifEmployeByCin(emp)) 
			return "found";
		
		if(jwtAuthenticationTokenRepository.save(jwtAuthenticationToken) == null)
		return "fail to add jeton";

		if(employeRepository.save(emp)!=null)
		{
			return "added";
		}
		return "fail";
	}
	
	@Override
	public boolean verifEmployeByCin(Employe emp) {
	   List<Employe> list=new ArrayList<Employe>();
	   boolean test=false;
	   try {
		list.addAll(getEmploye());
		for(Employe e:list)
		{
			if(e.getCin().equals(emp.getCin()))
			{
				test=true;
			
			}
		}
	} catch (Exception e) {
		e.printStackTrace();
	}
		return test;
	}


}
